<div style="min-height:90vh" class="bg-dark text-light" id="newsDiv">
    <div class="container pt-3">
        <h1 style="font-size:3.5em">{{lang "Events" res}}</h1>
        <div class="row">
            {{#each events}}
            <div class="col-sm-6 col-lg-4 my-1">
                <div class="card"
                    style="background-image: url(/get-image/{{backgroundKey}});background-size:cover;height:300px;">
                    <h5 class="card-header h5 dark-bg text-white">{{parseDate date}}</h5>
                    <div class="card-body d-flex flex-column">
                        <div class="flex-grow-1 p-2 rgba-white-light rounded">
                            <h5 class="card-title text-dark">{{lang title ../res}}</h5>
                            <p class="card-text">{{lang subTitle ../res}}</p>
                        </div>
                        <a href="/event/{{_id}}" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
